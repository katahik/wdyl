<h1 id="heading">
  <%= @competition.name %> (<%= @competition.period_start %> 〜 <%= @competition.period_end %>)
</h1>

<div class="container">
  <div class="row">
    <table class="table table-striped">
      <thead>
      <tr>
        <th>rank</th>
        <th>name</th>
        <th>points</th>
        <th>image</th>
      </tr>
      </thead>
      <tbody>
      <!--@itemsの配列の中身をひとつひとつitemに入れて、実行していく-->
      <% @rankeditems.each do |item| %>
        <% if @competition.id == item["competition_id"] %>
          <tr>
            <td><%= item["rank"] %></td>
            <td><%= item["name"] %></td>
            <td><%= item["count"] %></td>
            <td>
              <%= image_tag "/item_images/#{item["image"]}", width: "100px", height: "100" %>
            </td>
          </tr>
        <% end %>
      <% end %>
      </tbody>
    </table>
  </div>
</div>